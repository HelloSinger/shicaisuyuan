<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="743px"
    android:layout_height="487px"
    android:layout_gravity="center"
    android:background="#191919"

    android:orientation="vertical">

    <ImageView
        android:layout_width="64px"
        android:layout_height="64px"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="82px"
        android:background="@drawable/scan_title" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="58px"
        android:text="扫描二维码不是食联诚信溯源平台"
        android:textColor="#FEFEFE"
        android:textSize="24px" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="2px"
        android:text="专属“溯源二维码”。"
        android:textColor="#FEFEFE"
        android:textSize="24px" />



    <Button
        android:id="@+id/btn_sure"
        android:layout_width="220px"
        android:layout_height="60px"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="63px"
        android:background="@drawable/buttonstyle"
        android:text="确定"
        android:textColor="#E9BD85"
        android:textSize="28px" />

</LinearLayout>