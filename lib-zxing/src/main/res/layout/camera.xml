<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/small_bg">

    <FrameLayout
        android:id="@+id/fl_zxing_container"
        android:layout_width="match_parent"
        android:background="@drawable/small_bg"
        android:layout_height="match_parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="193px"
        android:layout_marginTop="327px"
        android:text="将食联诚信溯源平台专属的"
        android:textColor="#FFFFFF"
        android:textSize="24px" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="158px"
        android:layout_marginTop="370px"
        android:text="“溯源二维码”对准扫描框，"
        android:textColor="#00CF9B"
        android:textSize="30px" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="229px"
        android:layout_marginTop="419px"
        android:text="展示产品溯源信息。"
        android:textColor="#FFFFFF"
        android:textSize="24px" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="260px"
        android:layout_marginTop="1311px"
        android:text="图层识别失败原因："
        android:textColor="#FFFFFF"

        android:textSize="24px"
        android:visibility="invisible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="260px"
        android:layout_marginTop="1351px"
        android:text="1.当前无线网络没有正常连接或网络连接信号较弱；"
        android:textColor="#B4B4B4"
        android:textSize="24px"

        android:visibility="invisible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="260px"
        android:layout_marginTop="1391px"
        android:text="2.因距离或光线太暗导致扫描图像不清晰；"
        android:textColor="#B4B4B4"
        android:textSize="24px"

        android:visibility="invisible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="260px"
        android:layout_marginTop="1431px"
        android:text="3.所扫描二维码，非食联诚信溯源平台定制“溯源二维码”。"
        android:textColor="#B4B4B4"
        android:textSize="24px"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="50px"
        android:layout_height="50px"
        android:layout_marginTop="29px"
        android:layout_marginLeft="30px"
        android:scaleType="centerInside"
        android:layout_alignParentTop="true"
        android:src="@drawable/back" />


</RelativeLayout>